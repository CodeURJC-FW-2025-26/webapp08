<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>ZenTao Buffet</title>
  <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="/css/Style.css">
</head>
<body>
  {{> header}}

  <div class="hero-img">
    <div class="hero-overlay"></div>
    <div class="hero-text">ZenTao Buffet</div>
    <img src="/images/assets_task_01k71v35kefkh9tzb07k4pr14h_1759924941_img_1.webp" alt="ZenTao Buffet" class="img-fluid w-100">
  </div>

  <div class="container mt-4">
      <div class="search-filter-bar mb-4">
        <!-- CATEGORY PILLS: place right after the search form -->
        <div class="category-pills mt-3">
          <a href="/?searchType=" class="pill {{^searchType}}selected{{/searchType}}">Todos</a>
          <a href="/?searchType=Entrante" class="pill {{#isTypeEntrante}}selected{{/isTypeEntrante}}">Entrante</a>
          <a href="/?searchType=Principal" class="pill {{#isTypePrincipal}}selected{{/isTypePrincipal}}">Principal</a>
          <a href="/?searchType=Sushi" class="pill {{#isTypeSushi}}selected{{/isTypeSushi}}">Sushi</a>
          <a href="/?searchType=Postres" class="pill {{#isTypePostres}}selected{{/isTypePostres}}">Postres</a>
          <a href="/?searchType=Bebida" class="pill {{#isTypeBebida}}selected{{/isTypeBebida}}">Bebida</a>
        </div>
        <form method="GET" action="/">
          <div class="row g-3 align-items-end">
            <div class="col-md-4">
              <label for="searchName" class="form-label">Buscar por nombre</label>
              <input 
                type="text" 
                class="form-control" 
                id="searchName" 
                name="searchName"
                placeholder="Ej: Sushi, Pollo..."
                value="{{searchName}}">
            </div>
          </div>
          <div class="text-end mt-3">
            <button type="submit" class="btn btn-create">Buscar</button>
            <a href="/" class="btn btn-secondary ms-2">Limpiar</a>
          </div>
        </form>
      </div>

    <div class="text-end mb-3">
      <a href="/plates/new" class="btn btn-create">Crear nuevo plato</a>
    </div>

    <div id="plates-grid" class="plates-grid row">
      {{#plates}}
      <div class="col-12 col-md-6 col-lg-4 mb-4">
        <a href="/plates/{{_id}}" class="text-decoration-none">
          <div class="plate-card">
            <img src="{{#images}}{{.}}{{/images}}{{^images}}/images/default-plate.jpg{{/images}}" alt="{{title}}" />
            <div class="plate-card-body">
              <div class="plate-type">{{type}}</div>
              <h5 class="plate-title">{{title}}</h5>
              <div class="plate-price">{{price}} ‚Ç¨</div>
              <p class="plate-description">{{description}}</p>
              <div class="plate-duration">Tiempo de preparaci√≥n: {{duration}} {{#duration}}min{{/duration}}{{^duration}}---{{/duration}}</div>
              <div class="plate-allergen">Al√©rgenos: {{#allergens}}{{.}}{{#isLast}}, {{/isLast}}{{/allergens}}{{^allergens}}---{{/allergens}}</div>
            </div>
          </div>
        </a>
      </div>
      {{/plates}}
    </div>

    <!-- Pagination -->
    {{#totalPages}}
    <nav aria-label="Paginaci√≥n" class="mt-4">
      <ul class="pagination justify-content-center">

        {{#hasPrev}}
          <li class="page-item">
            <a class="page-link" href="/?page={{prevPage}}{{queryString}}" aria-label="Anterior">
              &laquo; Anterior
            </a>
          </li>
        {{/hasPrev}}

        {{#pages}}
          <li class="page-item {{#isCurrent}}active{{/isCurrent}}">
            <a class="page-link" href="/?page={{num}}{{queryString}}">{{num}}</a>
          </li>
        {{/pages}}

        {{#hasNext}}
          <li class="page-item">
            <a class="page-link" href="/?page={{nextPage}}{{queryString}}" aria-label="Siguiente">
              Siguiente &raquo;
            </a>
          </li>
        {{/hasNext}}

      </ul>
    </nav>
    {{/totalPages}}

    <!-- CONTACT CARD (restored with fields) -->
    <div class="row justify-content-center mt-5">
      <div class="col-12 col-md-11 col-lg-10">
        <div id="contact-card" class="contact-card">
          <h3 class="contact-title">Cont√°ctanos</h3>
          <p class="contact-info">
            üìç Calle Sakura 123, Madrid, Espa√±a<br>
            ‚òéÔ∏è Tel√©fono: +34 654 321 987<br>
            ‚úâÔ∏è Email: contacto@zentao.com
          </p>
          <form class="contact-form" id="contactForm">
            <div class="mb-3">
              <label for="name" class="form-label"><em><strong>Tu nombre</strong></em></label>
              <input type="text" id="name" name="name" class="form-control" placeholder="Escribe tu nombre">
            </div>
            <div class="mb-3">
              <label for="email" class="form-label"><em><strong>Tu correo</strong></em></label>
              <input type="email" id="email" name="email" class="form-control" placeholder="ejemplo@email.com">
            </div>
            <div class="mb-3">
              <label for="message" class="form-label"><em><strong>Mensaje</strong></em></label>
              <textarea id="message" name="message" class="form-control" rows="4" placeholder="Tu mensaje..."></textarea>
            </div>
            <div class="text-end">
              <button type="submit" class="btn btn-create">Enviar mensaje</button>
            </div>
          </form>
        </div>
      </div>
    </div>
    <!-- END CONTACT -->

  </div>

  {{> footer}}
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

  <!-- Small client-side logic for the contact form (does not send to server, only visual) -->
  <script>
    document.getElementById('contactForm')?.addEventListener('submit', function(e){
      e.preventDefault();
      alert('Mensaje simulado. Implementa endpoint si quieres enviar al servidor.');
      this.reset();
    });
  </script>
</body>
</html>
